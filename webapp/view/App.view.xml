<mvc:View controllerName="at.clouddna.training06.zhoui5.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    >
    <Shell id="shell">  
            <App id="app">
                <pages>
                    <Page id="page" title="{i18n>title}">
<customHeader>
    <OverflowToolbar id="_IDGenOverflowToolbar1">  
        <Title id="_IDGenTitle1" text="{i18n>title}"/>
        <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
        <Button id="app_edit_button" text="{i18n>edit}" type="Emphasized"
                 icon="sap-icon://edit" press="onEditPressed"/>
    </OverflowToolbar>
</customHeader>                    
                        <content >
	<core:Fragment id="app_change_fragment" 
     fragmentName="at.clouddna.training06.zhoui5.view.fragment.ChangeCustomer"
     type="XML"/>
                        </content>
<footer>
    <Bar id="_IDGenBar1">
        <contentRight>
            <Button id="app_save_button" text="{i18n>save}" type="Accept"
                icon="sap-icon://save" press="onSavePressed"/>
            <Button id="app_cancel_button" text="{i18n>cancel}" type="Reject"
                icon="sap-icon://cancel" press="onCancelPressed"/>
        </contentRight>
    </Bar>
</footer>
                        
                    </Page>
                </pages>
            </App>
    </Shell>


</mvc:View>
